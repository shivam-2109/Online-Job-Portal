<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.labouriq.controllers.PostJobController"
      spacing="20"
      style="-fx-background-color: #F4F6F9; -fx-padding: 30;"
      prefWidth="700" prefHeight="600"
      stylesheets="@/css/styles.css">

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox>
            <Label text="Create New Listing" styleClass="page-title"/>
            <Label text="Reach thousands of qualified candidates today." styleClass="subtitle-text"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <VBox spacing="20" styleClass="table-card" VBox.vgrow="ALWAYS" maxWidth="800">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <VBox spacing="8">
            <Label text="Job Title" styleClass="input-label"/>
            <TextField fx:id="titleField" promptText="e.g. Senior Java Developer" styleClass="modern-input"/>
        </VBox>

        <HBox spacing="20">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Location" styleClass="input-label"/>
                <HBox alignment="CENTER_LEFT" styleClass="modern-input-group">
                    <TextField fx:id="locationField" promptText="e.g. Mumbai, Remote" styleClass="transparent-input" HBox.hgrow="ALWAYS"/>
                    <SVGPath content="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" fill="#95a5a6" scaleX="0.8" scaleY="0.8"/>
                </HBox>
            </VBox>

            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Estimated Salary" styleClass="input-label"/>
                <HBox alignment="CENTER_LEFT" styleClass="modern-input-group">
                    <TextField fx:id="salaryField" promptText="e.g. ₹8,00,000 PA" styleClass="transparent-input" HBox.hgrow="ALWAYS"/>
                    <Label text="₹" textFill="#95a5a6" style="-fx-font-weight:bold; -fx-padding:0 5 0 0;"/>
                </HBox>
            </VBox>
        </HBox>

        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <Label text="Job Description &amp; Requirements" styleClass="input-label"/>
            <TextArea fx:id="descArea" promptText="Describe the role, responsibilities, and required skills..."
                      wrapText="true" styleClass="modern-textarea" VBox.vgrow="ALWAYS"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Label fx:id="messageLabel" textFill="#e74c3c" visible="false"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cancel" onAction="#onCancel" styleClass="secondary-btn"/>
            <Button fx:id="postBtn" text="Publish Job" onAction="#onPostJob" styleClass="primary-btn"/>
        </HBox>

    </VBox>
</VBox>